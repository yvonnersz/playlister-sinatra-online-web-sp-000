
<% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %>

<h1><%= @song.name %></h1>
<h2>By <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h2>

<h2><%= @song.name %> Genres: </h2>
<ul>
<% @song.genres.each do |genre| %>
  <li><h3><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></h3></li>
<% end %>
</ul>
