<h1> Edit your song! </h1>

<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <label> Artist Name </label>
  <input type="text" name="Artist Name" value="<%= @song.artist.name %>"> </br>

  <label> Song Name </label>
  <input type="text" name="Name" value="<%= @song.name %>"> </br>
  <h3>Select Genres: </h3>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>" <%= 'checked' if @song.genre_ids.include?(genre.id) %>><%= genre.name %></input>
    <br>
  <% end %>
  <br>
  <input type="submit" value="Save" id="submit">
</form>
